<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingLeft="10dp"
    android:background="#F6E8ED"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_quanly_baocao_anhphim"
            android:layout_width="66dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_quanly_baocao_tenphim"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Ten phim 1"
                android:gravity="center_horizontal"
                android:textColor="#B9000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_quanly_baocao_soluongmua"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="3"
                android:gravity="center_horizontal"
                android:textColor="#B9000000"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txt_quanly_baocao_thusp"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:text="1000000"
                android:gravity="center_horizontal"
                android:textColor="#F44336"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>