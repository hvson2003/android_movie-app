<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quanly.FilmEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13172E"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/imgb_suaphim_trolai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#13172E"
            android:src="@drawable/ic_round_arrow_back_24" />

        <TextView
            android:id="@+id/txt_suaphim"
            android:layout_width="302dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sửa phim"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/textView_chontheloai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="Chọn thể loại (*)"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Tên phim"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_ql_suaphim_tenphim"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:ems="10"
                    android:hint="Tên phim"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Mô tả"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_ql_suaphim_mota"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:ems="10"
                    android:hint="Mô tả"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="18dp"
                    android:text="Thời lượng"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_ql_suaphim_thoiluong"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:drawableRight="@drawable/baseline_access_time_24"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Thời lượng"
                    android:inputType="none"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="18dp"
                    android:text="Ngày khởi chiếu"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_ql_suaphim_ngaykhoichieu"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:drawableRight="@drawable/ic_round_calendar_24"
                    android:focusable="false"
                    android:hint="Ngày khởi chiếu"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Giá vé"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_ql_chitietphim_edt"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_ql_suaphim_gia"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Giá vé"
                        android:inputType="number"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:id="@+id/txt_VND"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VNĐ / 1 vé"

                        android:textColor="#F44336"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_ql_suaphim_chonanh"
                        android:layout_width="88dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/chonanhphim"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/img_ql_suaphim_anh"
                        android:layout_width="138dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:layout_marginLeft="70dp"
                        android:scaleType="centerCrop"

                        />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_ql_suaphim_sua"
                    android:layout_width="114dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/sua" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>