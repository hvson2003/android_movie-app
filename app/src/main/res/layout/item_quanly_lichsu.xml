<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_quanly_lichsu_anhphim"
                android:layout_width="78dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_quanly_lichsu_tenphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ten phim 1"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_tenkhachhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản: kh1"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_hotenkh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ho ten: ho ten khach hang"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_emailkh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: kh1"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_sdtkh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sdt: 0123456789"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_theloai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thể loại: thể loại 1"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 2"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_giaphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 1000đ"
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_ngaydat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đặt: "
                    android:textColor="#B9000000"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_quanly_lichsu_tongthu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền: 1000đ"
                    android:textColor="#F44336"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>