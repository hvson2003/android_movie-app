<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#464B61"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_khachhang_lichsu_anhphim"
            android:layout_width="100dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_khachhang_lichsu_tenphim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phim: ten phim 1"
                android:textColor="#74FF79"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_theloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Thể loại: thể loại 1"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 1000VNĐ"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_ngaymua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày mua: 1/1/2024"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_khachhang_lichsu_thanhtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành tiền: 2000VNĐ"
                android:textColor="#FFEB3B"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>