<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="#252836">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_khachhang_yeuthich_anhphim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_tenphim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_theloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/white"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_khachhang_yeuthich_thoiluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_khachhang_yeuthich_bothich"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_heart_broken_24" />
    </LinearLayout>

</androidx.cardview.widget.CardView>